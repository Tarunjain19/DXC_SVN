log4j.rootLogger=debug, stdout

log4j.logger.Dialog.Designer.TraceWriter.RCOM_TVP= debug, TRCOM_TVP
log4j.logger.Dialog.Designer.ReportWriter.RCOM_TVP= debug, RRCOM_TVP

# Console
log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n

# Report File.
log4j.appender.RRCOM_TVP=org.apache.log4j.RollingFileAppender
log4j.appender.RRCOM_TVP.File=D:/RCOM/Logs/RCOM_TVP/report.log
log4j.appender.RRCOM_TVP.maxFileSize=50MB
log4j.appender.RRCOM_TVP.maxBackupIndex=50
log4j.appender.RRCOM_TVP.DatePattern='.'yyyy-MM-dd
log4j.appender.RRCOM_TVP.layout=org.apache.log4j.PatternLayout
log4j.appender.RRCOM_TVP.layout.ConversionPattern=%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n
log4j.appender.RRCOM_TVP.Encoding=UTF-8
# Trace File.
log4j.appender.TRCOM_TVP=org.apache.log4j.RollingFileAppender
log4j.appender.TRCOM_TVP.File=D:/RCOM/Logs/RCOM_TVP/trace.log
log4j.appender.TRCOM_TVP.maxFileSize=50MB
log4j.appender.TRCOM_TVP.maxBackupIndex=50
log4j.appender.TRCOM_TVP.DatePattern='.'yyyy-MM-dd
log4j.appender.TRCOM_TVP.layout=org.apache.log4j.PatternLayout
log4j.appender.TRCOM_TVP.layout.ConversionPattern=%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n
log4j.appender.TRCOM_TVP.Encoding=UTF-8