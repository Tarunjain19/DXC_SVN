# log4j.rootLogger=error, stdout

log4j.logger.Dialog.Designer.TraceWriter.RCOM_Corporate_Desk= debug, TRCOM_Corporate_Desk
log4j.logger.Dialog.Designer.ReportWriter.RCOM_Corporate_Desk= info, RRCOM_Corporate_Desk
log4j.logger.flow.CallStart = debug, TRCOM_Corporate_Desk

# Console
log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n

# Report File.
log4j.appender.RRCOM_Corporate_Desk=org.apache.log4j.DailyRollingFileAppender
log4j.appender.RRCOM_Corporate_Desk.MaxFileSize=10MB
log4j.appender.RRCOM_Corporate_Desk.MaxBackupIndex=5
log4j.appender.RRCOM_Corporate_Desk.File=D:/RCOM/OtherFlows/Corporate/Logs/report.log
log4j.appender.RRCOM_Corporate_Desk.DatePattern='.'yyyy-MM-dd
log4j.appender.RRCOM_Corporate_Desk.layout=org.apache.log4j.PatternLayout
log4j.appender.RRCOM_Corporate_Desk.layout.ConversionPattern=%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n
log4j.appender.RRCOM_Corporate_Desk.Encoding=UTF-8
# Trace File.
log4j.appender.TRCOM_Corporate_Desk=org.apache.log4j.DailyRollingFileAppender
log4j.appender.TRCOM_Corporate_Desk.MaxFileSize=10MB
log4j.appender.TRCOM_Corporate_Desk.MaxBackupIndex=5
log4j.appender.TRCOM_Corporate_Desk.File=D:/RCOM/OtherFlows/Corporate/Logs/trace.log
log4j.appender.TRCOM_Corporate_Desk.DatePattern='.'yyyy-MM-dd
log4j.appender.TRCOM_Corporate_Desk.layout=org.apache.log4j.PatternLayout
log4j.appender.TRCOM_Corporate_Desk.layout.ConversionPattern=%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n
log4j.appender.TRCOM_Corporate_Desk.Encoding=UTF-8
